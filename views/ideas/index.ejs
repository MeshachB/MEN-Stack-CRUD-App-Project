<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Ideas</title>
  <link rel="stylesheet" href="/styles.css">
</head>


<body>
<header class="game-header">
  <div class="screen">
    <span class="logo">EARTHFORGE v1.0</span>
    <span class="status">‚óè ONLINE</span>
  </div>
  <div class="auth-controls">
  <% if (user) { %>
    <span class="user">Trainer: <%= user.email %></span>
   <a href="/logout" class="btn">Logout</a>
  <% } else { %>
    <a href="/auth/login" class="btn">Login</a>
    <a href="/auth/register" class="btn">Sign Up</a>
  <% } %>
</div>

<div class="pixel-divider"></div>


</header>

  <div class="container">
    <h1>Ideas</h1>

    <a href="/ideas/new">+ Add New Idea</a>

    <ul class="idea-list">
      <% ideas.forEach(idea => { %>
        <li class="idea-item">

          <!-- CLICK TO VIEW -->
          <a class="idea-title" href="/ideas/<%= idea._id %>">
            <strong><%= idea.title %></strong>
          </a>

          <p class="idea-description"><%= idea.description %></p>

          <div class="idea-actions">
            <form
              action="/ideas/<%= idea._id %>?_method=DELETE"
              method="POST"
              style="display:inline;"
            >
              <button type="submit">Delete</button>
            </form>

            <a href="/ideas/<%= idea._id %>/edit">Edit</a>
          </div>

        </li>
      <% }) %>
    </ul>
  </div>

</body>
</html>
