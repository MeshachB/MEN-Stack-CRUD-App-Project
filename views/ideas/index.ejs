<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Ideas</title>

  <!-- Global styles -->
  <link rel="stylesheet" href="/styles.css">
</head>
<body>

  <div class="container">
    <h1>Ideas</h1>

    <a href="/ideas/new" class="add-link">+ Add New Idea</a>

    <ul class="idea-list">
      <% ideas.forEach(idea => { %>
        <li class="idea-item">
          <strong><%= idea.title %></strong>
          â€” <%= idea.description %>

          <div class="idea-actions">
            <form
              action="/ideas/<%= idea._id %>?_method=DELETE"
              method="POST"
              style="display:inline;"
            >
              <button type="submit">Delete</button>
            </form>

            <a href="/ideas/<%= idea._id %>/edit">Edit</a>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>

</body>
</html>
