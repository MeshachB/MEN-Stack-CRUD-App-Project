<<link rel="stylesheet" href="/styles.css">

<div class="container">
  <h1>Edit Idea</h1>

  <form action="/ideas/<%= idea._id %>?_method=PUT" method="POST">
    <label>Title</label>
    <input type="text" name="title" value="<%= idea.title %>" required>

    <label>Description</label>
    <textarea name="description" required><%= idea.description %></textarea>

    <button type="submit">Update Idea</button>
  </form>

  <a href="/ideas" class="back-link">‚Üê Back to Ideas</a>
</div>
